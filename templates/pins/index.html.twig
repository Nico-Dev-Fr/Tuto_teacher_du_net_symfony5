{% extends 'layouts/base.html.twig' %}

{% block title %} Pins {% endblock %}

{% block body %}
    <div class="container"> 
        <div class="grid row">
            {% if pins|length > 0 %}
            <h1>{{pluralize(pins | length, 'Pin')}}</h1>
                {% for pin in pins %}
                <div class="col-md-6">
                    <div class="card">
                    {% if pin.imageName != "" %}
                        <img class="card-img-top" src="uploads/pins/{{pin.imageName}}" alt="Card image cap">
                    {% endif %}
                        <div class="card-body">
                            <a href="{{ path('app_pins_show', {'id': pin.id}) }}">
                                <h2 class="card-title">{{ pin.title }}</h2>
                            </a>
                            <p class="card-text">{{ pin.description }}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            {% else %}
                <b>NOTHING</b>
            {% endif %}
        </div>
    </div>
{% endblock %}